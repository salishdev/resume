\documentclass{resume} % Use the custom resume.cls style

\usepackage[left=0.4 in,top=0.4in,right=0.4in,bottom=0.4in]{geometry} % Document margins

%----------------------------------------------------------------------------------------
% Contact Information
%----------------------------------------------------------------------------------------



\begin{document}

<%# basics %>
  \begingroup
  \vspace*{-2em}
  {\Huge \textbf{<% name %>}} \hfill
  \vspace*{-1em}
  <%#email%>\normalsize{\href{mailto:<% email %>}{<% email %>} %<%/email%>
  <%#url%>\contactSep \href{<% url %>}{<% urlLabel %>} %<%/url%>
% <%#phone%>\contactSep \href{tel:<% phoneClean %>}{<% phone %>} %<%/phone%>
  <%#profiles%>
    \contactSep \href{<% url %>}{<% urlLabel %>} %
  <%/profiles%>}
  \nameskip\break
  \endgroup
<%/ basics %>


%----------------------------------------------------------------------------------------
% Professional Summary
%----------------------------------------------------------------------------------------

<%#basics.summary%>

% \begin{rSection}{Professional Summary}
  <%.%>
% \end{rSection}

<%/basics.summary%>

%----------------------------------------------------------------------------------------
% Work Experience
%----------------------------------------------------------------------------------------
<%#work.length%>
  \begin{rSection}{Work Experience}

    <%#work%>
      \begin{rWorkHistoryItem}{<% position %>}{<% name %>}{<% duration %>}
        <%#highlights%>
          \item <%.%>
        <%/highlights %>
      \end{rWorkHistoryItem}
    <%/work%>

  \end{rSection}
<%/work.length%>

%----------------------------------------------------------------------------------------
% Skills
%----------------------------------------------------------------------------------------

<%#skills.length%>
  \begin{rSection}{Skills}
    <%#skills%>
      \begin{rSkillItem}{<% name %>}{<% keywords %>}
      \end{rSkillItem}
    <%/skills%>
    \vspace{0.25em}
  \end{rSection}
<%/skills.length%>


%----------------------------------------------------------------------------------------
% Education
%----------------------------------------------------------------------------------------

<%#education.length%>
  \begin{rSection}{Education}

    <%#education%>
      \begin{rEducationItem}{<% studyType %>}{<% institution %>}{<% duration %>}
      \end{rEducationItem}
    <%/education%>

  \end{rSection}
<%/education.length%>

%----------------------------------------------------------------------------------------
% Projects
%----------------------------------------------------------------------------------------

<%#projects.length%>
  \begin{rSection}{Projects}

    <%#projects%>
      \begin{rProjectItem}{\href{<% url %>}{<% name %>}}{<% duration %>}
        <%#highlights%>
          \item <%.%>
        <%/highlights %>
      \end{rProjectItem}
    <%/projects%>

  \end{rSection}
<%/projects.length%>

%----------------------------------------------------------------------------------------
% Awards
%----------------------------------------------------------------------------------------

<%#awards.length%>
  \begin{rSection}{Awards}

    <%#awards%>
      \begin{rAwardItem}{<% title %>}{<% description %>}{<% duration %>}
      \end{rAwardItem}
    <%/awards%>

  \end{rSection}
<%/awards.length%>

\end{document}
