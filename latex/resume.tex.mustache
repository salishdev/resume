\documentclass{resume} % Use the custom resume.cls style

\usepackage[left=0.4 in,top=0.4in,right=0.4in,bottom=0.4in]{geometry} % Document margins

%----------------------------------------------------------------------------------------
% Contact Information
%----------------------------------------------------------------------------------------

\begin{document}

\begingroup

\vspace*{-2em}
{\Huge \textbf{<% name %>}} \hfill
\vspace*{-1em}
<%#contact.email%>\normalsize{\href{mailto:<% contact.email %>}{<% contact.email %>}<%/contact.email%> %
<%#contact.website%>| \href{https://<% contact.website %>}{<% contact.website %>}<%/contact.website%> %
<%#contact.phone%>| \href{tel:<% contact.phone_clean %>}{<% contact.phone %>}<%/contact.phone%> %
<%#contact.github%>| \href{https://<% contact.github %>}{<% contact.github %>}<%/contact.github%> %
<%#contact.linkedin%>| \href{https://<% contact.linkedin %>}{<% contact.linkedin %>}}<%/contact.linkedin%> %
\nameskip\break
\endgroup


%----------------------------------------------------------------------------------------
% Professional Summary
%----------------------------------------------------------------------------------------

<%#summary%>

% \begin{rSection}{Professional Summary}
  <%.%>
% \end{rSection}

<%/summary%>

%----------------------------------------------------------------------------------------
% Work Experience
%----------------------------------------------------------------------------------------
<%#experience.length%>
  \begin{rSection}{Work Experience}

    <%#experience%>
      \begin{rWorkHistoryItem}{<% position %>}{<% company %>}{<% duration %>}
        <%#accomplishments%>
          \item <%.%>
        <%/accomplishments %>
      \end{rWorkHistoryItem}
    <%/experience%>

  \end{rSection}
<%/experience.length%>

%----------------------------------------------------------------------------------------
% Skills
%----------------------------------------------------------------------------------------

<%#skills.length%>
  \begin{rSection}{Skills}
    <%#skills%>
      \begin{rSkillItem}{<% category %>}{<% items %>}
      \end{rSkillItem}
    <%/skills%>
    \vspace{0.25em}
  \end{rSection}
<%/skills.length%>


%----------------------------------------------------------------------------------------
% Education
%----------------------------------------------------------------------------------------

<%#education.length%>
  \begin{rSection}{Education}

    <%#education%>
      \begin{rEducationItem}{<% degree %>}{<% institution %>}{<% duration %>}
      \end{rEducationItem}
    <%/education%>

  \end{rSection}
<%/education.length%>

%----------------------------------------------------------------------------------------
% Projects
%----------------------------------------------------------------------------------------

<%#projects.length%>
  \begin{rSection}{Projects}

    <%#projects%>
      \begin{rWorkHistoryItem}{<% role %>}{<% name %>}{<% duration %>}
        <%#accomplishments%>
          \item <%.%>
        <%/accomplishments %>
      \end{rWorkHistoryItem}
    <%/projects%>

  \end{rSection}
<%/projects.length%>

%----------------------------------------------------------------------------------------
% Awards
%----------------------------------------------------------------------------------------

<%#awards.length%>
  \begin{rSection}{Awards}

    <%#awards%>
      \begin{rAwardItem}{<% title %>}{<% description %>}{<% duration %>}
      \end{rAwardItem}
    <%/awards%>

  \end{rSection}
<%/awards.length%>

\end{document}
